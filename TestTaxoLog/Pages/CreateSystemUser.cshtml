@page
@model CreateSystemUserModel
@{
    ViewData["Title"] = "Добавление нового пользователя";
}
<h2>@ViewData["Title"]</h2>
<div asp-validation-summary="All"></div>
<form method="POST">
    <div><label>Имя</label><br /><input asp-for="systemUser.Name" /></div>
    <div><label>Логин</label><br /><input asp-for="systemUser.Login" /></div>
    <div><label>Пароль</label><br /><input asp-for="systemUser.Password" /></div>
    <div><label>Телефон</label><br /><input asp-for="systemUser.PhoneNumber" /></div>
    <div><label>E-mail</label><br /><input asp-for="systemUser.Email" /></div>
    <input type="submit" value="Отправить" />
</form>
